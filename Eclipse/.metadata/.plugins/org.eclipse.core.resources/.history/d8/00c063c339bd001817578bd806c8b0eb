package booksAndAuthors;

public class booksSql {
	public static String creatTable() {
		return "CREATE TABLE Books ("
		+ "ID int not null primary key"
		+ " GENERATED ALWAYS AS IDENTITY"
		+ " (START WITH 123, INCREMENT BY 1),"
		+ "Title varchar(255)," 
		+ "PublishedYear int," 
		+ "Genre varchar(225)," 
		+ "Publisher varchar(255))";
		}

		public static String fillTable() {
		return "INSERT INTO Books (Title, PublishedYear, Category, Publisher) VALUES "
		+ "('Harry potter I', 1997, 'Fantasy', 'Bloomsbury'),"
		+ "('Alice In Wonderland', 1871, 'Advanture', 'Macmillan'),"
		+ "('', , , 'EE'),"
		+ "('Dope', 'Kent', 2022, 'FA'),"
		+ "('West', 'Rita', 2022, 'CS')";
		}

		public static String dropTable() {
		return "DROP TABLE Books";
		}

		//- - - - - - - - - - -Query Statements - - - - - - - - - 

		public static String queryAll() {
		return "SELECT * FROM Books ";
		}

		public static String query_NameMajorCS() {
		return "SELECT ID, Lastname, Firstname, Major FROM Books " 
		+ "WHERE Major='CS'";
		}
}
